<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">


    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        app:layoutDescription="@xml/fragment_home_xml_constraintlayout_scene">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            tools:context=".MapsActivity" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circularImag_def1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20sp"
            android:src="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/fragmentHome_relativeLocationActions"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/fragmentHome_imgGetUserLocation"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_my_location_24"
            app:layout_constraintBottom_toBottomOf="@+id/circularImag_def1"
            app:layout_constraintLeft_toLeftOf="@+id/circularImag_def1"

            app:layout_constraintLeft_toRightOf="@+id/circularImag_def1"
            app:layout_constraintTop_toTopOf="@+id/circularImag_def1" />


        <RelativeLayout
            android:id="@+id/fragmentHome_relativeLocationActions"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/relative_location_info_background"
            android:paddingLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/fragmentHome_txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="Current Location"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/fragmentHome_txtCurrentAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragmentHome_txtLocation"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"
                android:maxLines="2"
                android:text="-1"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="invisible"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/fragmentHome_txtCurrentLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragmentHome_txtLocation"

                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="60dp"
                android:maxLength="20"
                android:text="@string/dummyLong"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible"

                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/fragmentHome_txtCurrentLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragmentHome_txtCurrentLat"
                android:layout_marginLeft="5dp"
                android:maxLength="20"
                android:text="@string/dummyLong"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/fragmentHome_imgOpenLocationInGoogleMaps"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@id/fragmentHome_txtCurrentLat"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="180dp"
                android:layout_marginTop="5dp"

                android:src="@drawable/google_maps_og_logo"
                android:visibility="visible"


                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/fragmentHome_imgShareLocationAsText"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@id/fragmentHome_txtCurrentLat"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/fragmentHome_imgOpenLocationInGoogleMaps"
                android:src="@drawable/ic_baseline_share_24"
                android:visibility="visible"


                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/fragmentHome_btnSaveLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/fragmentHome_txtCurrentLat"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-4dp"
                android:layout_toRightOf="@id/fragmentHome_imgShareLocationAsText"
                android:backgroundTint="@color/white"
                android:text="Save"

                android:textColor="@color/whiteBlue"
                android:visibility="invisible"
                tools:ignore="RtlCompat" />

            <ProgressBar
                android:id="@+id/fragmentHome_progrssGettingData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible" />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/circularImag_def2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="-20dp"
            android:src="@color/white"
            app:civ_border_color="@color/whiteBlue"
            app:civ_border_width="1dp"
            app:layout_constraintBottom_toTopOf="@id/fragmentHome_relativeLocationActions"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/fragmentHome_imgCollapseRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_collapse_down"
            app:layout_constraintBottom_toBottomOf="@id/circularImag_def2"
            app:layout_constraintLeft_toLeftOf="@id/circularImag_def2"
            app:layout_constraintRight_toRightOf="@id/circularImag_def2"
            app:layout_constraintTop_toTopOf="@id/circularImag_def2"
            app:tint="@color/whiteBlue"></ImageView>


    </androidx.constraintlayout.motion.widget.MotionLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circularImag_def3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:src="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fragmentHome_imgSearch"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintBottom_toBottomOf="@+id/circularImag_def3"
        app:layout_constraintLeft_toLeftOf="@+id/circularImag_def3"
        app:layout_constraintLeft_toRightOf="@+id/circularImag_def3"
        app:layout_constraintTop_toTopOf="@+id/circularImag_def3"
        app:tint="@color/midGray" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circularImag_def4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:src="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circularImag_def3" />

    <ImageView
        android:id="@+id/fragmentHome_imgMapType"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_layers_24"
        app:layout_constraintBottom_toBottomOf="@+id/circularImag_def4"
        app:layout_constraintLeft_toLeftOf="@+id/circularImag_def4"
        app:layout_constraintLeft_toRightOf="@+id/circularImag_def4"
        app:layout_constraintTop_toTopOf="@+id/circularImag_def4"
        app:tint="@color/midGray" />
</androidx.constraintlayout.widget.ConstraintLayout>